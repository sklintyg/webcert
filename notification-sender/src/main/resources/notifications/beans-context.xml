<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="notificationTransformer" class="se.inera.intyg.webcert.notification_sender.notifications.services.NotificationTransformer"/>

  <bean id="notificationAggregator" class="se.inera.intyg.webcert.notification_sender.notifications.services.NotificationAggregator"/>

  <bean id="notificationWSClient" class="se.inera.intyg.webcert.notification_sender.notifications.services.v1.NotificationWSClient"></bean>

  <bean id="notificationWSClientV3" class="se.inera.intyg.webcert.notification_sender.notifications.services.v3.NotificationWSClient"></bean>

  <bean id="processNotificationRequestRouteBuilder" class="se.inera.intyg.webcert.notification_sender.notifications.routes.NotificationRouteBuilder"/>

  <bean id="customObjectMapper" class="se.inera.intyg.common.util.integration.json.CustomObjectMapper"/>

  <bean id="notificationMessageDataFormat" class="org.apache.camel.component.jackson.JacksonDataFormat">
    <constructor-arg ref="customObjectMapper"/>
    <constructor-arg value="se.inera.intyg.common.support.modules.support.api.notification.NotificationMessage"/>
  </bean>

  <bean id="jaxbMessageDataFormat" class="org.apache.camel.converter.jaxb.JaxbDataFormat">
    <constructor-arg value="se.riv.clinicalprocess.healthcond.certificate.certificatestatusupdateforcareresponder.v1"/>
    <property name="partClass" value="se.riv.clinicalprocess.healthcond.certificate.certificatestatusupdateforcareresponder.v1.CertificateStatusUpdateForCareType"/>
    <property name="partNamespace">
      <bean class="javax.xml.namespace.QName">
        <constructor-arg value="urn:riv:clinicalprocess:healthcond:certificate:CertificateStatusUpdateForCareResponder:1"/>
        <constructor-arg value="CertificateStatusUpdateForCare"/>
      </bean>
    </property>
  </bean>

</beans>
