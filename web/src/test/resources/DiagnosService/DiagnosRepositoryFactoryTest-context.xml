<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <!-- Simple Spring context for testing purposes -->

  <context:annotation-config />
  
  <context:property-placeholder properties-ref="testProps" />

  <bean id="testProps" class="java.util.Properties">
    <constructor-arg>
      <props>
        <prop key="diagnos.code.encoding">UTF-8</prop>
      </props>
    </constructor-arg>
  </bean>

  <bean id="diagnosRepositoryFactory" class="se.inera.intyg.webcert.web.service.diagnos.repo.DiagnosRepositoryFactory" />
  <bean id="icdCodeConverter" class="se.inera.intyg.webcert.web.service.diagnos.IcdCodeConverter" />

</beans>
